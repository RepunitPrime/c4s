<% @page_title = "UserAuth | Signup" %>
<div class="Sign_Form">
  <div class="container">
    <!-- Display Flash Errors in Form if Any-->
    <h2 class="page-header">Sign Up</h2>
    <div class="col-xs-5">
      <div class="ui form">
        <h3>
      <% if flash[:color]== "valid" %>
          <div class="valid_notice">
            <p><%= flash[:notice]%></p>
          </div>
      <% elsif flash[:color]== "invalid"%>
          <div class="invalid_notice">
            <p><%=flash[:notice]%></p>
          </div>
      <%else%>
          <div class="notice">
            <p><%=flash[:notice]%></p>
          </div>
      <%end%>

      <!-- Display Sign Up Form-->
      <%= form_for(:user, :url => {:controller => 'signup', :action => 'create'}) do |f| %>
          <div class="field">
            <%= f.label :Full_Name, class: 'control-label' %>
            <%= f.text_field :name,id:"name", class: 'form-control',maxlength: '30' %>
          </div>
          <div class="field">
            <%= f.label :Username, class: 'control-label' %>
            <%= f.text_field :username,id:"username", class: 'form-control',maxlength: '20' %>
          </div>
          <div class="field">
            <%= f.label :Email, class: 'control-label' %>
            <%= f.text_field :email,id:"email", class: 'form-control',maxlength: '50' %>
          </div>
          <div class="field">
            <%= f.label :Password, class: 'control-label' %>
            <%= f.password_field :password,id:"password", class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :Password_Confirmation, class: 'control-label' %>
            <%= f.password_field :password_confirmation,id:"password_confirmation", class: 'form-control' %>
          </div>
              <div class="field">
                <button type="submit" name="commit"  class="huge ui teal icon button">
                  <i class="write icon"></i>Sign Up</button>
              </div>
      <% end %>
          </h3>
        </div>
    </div>

    <!-- Display Errors in Validating Form if Any-->
    <div class="col-xs-5 centered element ">
      <% if @user != nil && @user.errors.any? %>
          <br/><br/><br/><br/>
          <div class="ui icon negative message">
            <i class="remove circle icon"></i>
            <div class="content">
              <div class="header">
                Please check the issues below:
              </div>
              <p>
                  <ul>
                    <% for message_error in @user.errors.full_messages %>
                        <li> <%= message_error %></li>
                    <% end %>
                  </ul>
              </p>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>