<div class="container">
  <div class="page-header">
    <span style="font-size: large; font-weight: bold">Edit Offer</span>
    <span class="btn btn-link" style="float:right"><%= link_to 'Back to Offers', posts_path %></span>
  </div>

  <%= form_for @post, html: {multipart: true} do |f| %>
      <% if @post.errors.any? %>
          <div class="alert alert-danger" id="error_explanation">
            <h2><%= pluralize(@post.errors.count, "error") %> : </h2>

            <ul>
              <% @post.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>


      <% if @post.forSale == "sell" %>

          <div class=" form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>

          <br/>


          <div class="form-group">
            <%= f.label :Description %>
            <br>
            <textarea id="desc" name="post[desc]" ,placeholder="Description here" , class='redactor form-control' rows="10"></textarea>
          </div>

          <br/>


          <div class=" form-group">
            <%= f.label :image %>
            <%= f.file_field :image, class: '' %>
          </div>

          <br/>


          <div class=" form-group">
            <label>Cost <label>*</label></label>
            <%= f.text_field :cost, class: 'form-control', required: true %>
          </div>

          <br/>

          <div class="field">
            <%= f.hidden_field :user_id, :value => current_user.id %>
          </div>

      <% elsif @post.forSale == "exchange" %>

          <div class=" form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>

          <br/>


          <div class="form-group">
            <%= f.label :Description %>
            <br>
            <textarea id="desc" name="post[desc]" ,placeholder="Description here" , class='redactor form-control' rows="10"></textarea>
          </div>

          <br/>


          <div class=" form-group">
            <%= f.label :image %>
            <%= f.file_field :image, class: '' %>
          </div>

          <br/>


          <div class=" form-group">
            <label>Which book would you like in return? </label>
            <%= f.text_field :bookexpected, class: 'form-control' %>
          </div>

          <br/>

          <div class="field">
            <%= f.hidden_field :user_id, :value => current_user.id %>
          </div>


      <% end %>

      <div class="actions">
        <%= f.submit "Done", class: 'btn btn-primary' %>
      </div>
  <% end %>


</div>