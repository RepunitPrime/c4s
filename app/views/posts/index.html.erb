<p id="notice"><%= notice %></p>
<div class="container">
<div class="page-header">
  <span style="font-size: large; font-weight: bold">Posts</span>
  <span class="btn btn-link" style="float:right"><%= link_to 'New Post', new_post_path%></span>
</div>
<table class="table table-striped table-hover table-bordered">

    <tr>
      <th></th>
      <th>Title</th>
      <th>Topic</th>
      <th>Posted By</th>
      <th>Costs</th>

      <th colspan="1"></th>
    </tr>


    <% @posts.each do |post| %>
      <tr>
        <td style="text-align: center; ">

          <% if post.image_file_name.nil? %>
              <%= link_to(image_tag('/no_image.jpg', size: "200x200", class: "img-thumbnail"), post) %>
          <%else%>
              <%= link_to(image_tag(post.image, :alt => "No Image", class: "img-thumbnail"),post) %>
          <%end%>

        </td>
        <td style="vertical-align: middle"><%= post.title %></td>



        <td style="vertical-align: middle"><%= post.topic %></td>

        <td style="vertical-align: middle"><%= post.user.name %></td>

        <td style="vertical-align: middle"><%= post.cost %></td>

        <td style="vertical-align: middle">
         <!-- <%= link_to 'View', post, class: "btn btn-default" %>-->
          <% if(current_user.id ==  post.user.id) %>
            <%= link_to 'Edit', edit_post_path(post) %> |
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>

</table>
  <!--  pagination links like-->
  <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>

</div>