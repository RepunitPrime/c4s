<div class="container">
  <div class="row">
    <!-- Title -->
<!--     <h2 class="page-header"><%= @post.title %></h2> -->    <!-- Blog Post Content Column -->
    <h2 class="page-header">Product Description</h2>
    <div class="ui buttons">
      <button class="big ui button" onclick="RedirectToPosts()">
        <i class="arrow circle outline left icon"></i>Back</button>
      <% if @post.user == current_user %>
          <div class="or"></div>
          <button class="big ui button" onclick="RedirectToEdit()">
            <i class="edit left icon"></i>Edit</button>
          <div class="or"></div>
          <button class="big ui button" data-toggle="modal" data-target="#myModal" ><i class="remove icon"></i>Delete</button>
      <% end %>
    </div>

    
    <!-- Date/Time and posted by who-->
    <!-- <p><span class="glyphicon glyphicon-time"></span> Posted on <%= @post.created_at.to_datetime.strftime("%b %d, %Y") %> by <a href="<%= profile_path(@post.user_id) %>"><%= @post.user.username %></a></p>
    <hr> -->

  <table align="center" style="width:70%; height: 100%; align-text:center; margin-top:30px; background-color:;" class="tablepadding">
    <tr>
      <% if @post.forSale == "sale" %>
          <!--along with td image is also responsive now-->
          <td style="width: 250px; margin-left:20%;" >
            <% if @post.image_file_name.nil? %>
                <span style="margin-right: 20px">  <%= image_tag('/No_Image.png', width: '92%', class: "img-rounded") %> </span>

            <% else %>
                <span style="margin-right: 20px"><%= image_tag(@post.image, :alt => "No Image", width: '92%', class: "img-rounded") %></span>
            <% end %>

          </td>
          <td style="vertical-align: text-top;padding-left:20px;">
            <span class="product_description_title">
                <%= @post.title%>
             <hr class="hr_description">
             </span> 

          
              
              <strong>Cost:
        <label id="p_Modified_Teal">
          <spanp>&#8364;  </spanp>
          <% if @post.cost.nil? %>
              0
          <% else %>
              <%= @post.cost %>
          <% end %>
        </label>
        </strong>
        <br>

        <strong>Description:</strong>
        <% if @post.detail.empty? %>
        Sorry No description provided by the User.
        <% else %>
              <%= @post.detail.html_safe %>
        <% end %>



      
      <% if @post.user == current_user %>
      <br>
    <% else %>
<br>
    <div style="margin-top:30px;">

      <button class="product_details_button" data-toggle="modal" data-target="#Contact"><span>Contact Seller </span></button>
    </div>
    <% end %>
              <br>
        <div style="margin-top:30px;">
        <!-- Date/Time and posted by who-->
     <p><span class="glyphicon glyphicon-time"></span> Posted on <%= @post.created_at.to_datetime.strftime("%b %d, %Y") %> by <a href="<%= profile_path(@post.user_id) %>"><%= @post.user.username %></a></p> </div>

    </tr>
    <tr>
      <td></td>
      <td>
        
      </td>
    </tr>
    <% elsif @post.forSale == "exchange" %>
          <td style="width: 250px">
            <% if @post.image_file_name.nil? %>
                <span style="margin-right: 20px">  <%= image_tag('/No_Image.png', width: '92%', class: "img-rounded") %> </span>
            <% else %>
                <span style="margin-right: 20px"><%= image_tag(@post.image, :alt => "No Image", width: '92%', class: "img-rounded") %></span>
            <% end %>
          </td>
          <td style="vertical-align: text-top;">
            <p>
              <strong>Description:</strong>
              <%= @post.detail.html_safe %>
            </p>
          </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <p>
                <% if @post.bookexpected.empty?%>
                    Preferable book for exchange: <label id="p_Modified_Grey">&#45;&#45;&#45;&#45;</label>
                <% else %>
                    Preferable book for exchange: <label id="p_Modified_TealExch"><%= @post.bookexpected %></label>
                <% end %>
              </p>
            </td>
          </tr>

      <% end %>
  </table>

  <hr>
  <!--Add a Comment -->
  <div class="well">
    <h3>Leave a Comment:</h3>
    <%= form_for([@post, @post.ad_comments.build]) do |f| %>
        <p>
          <%= f.text_area :comment_body, class: 'form-control' %>
        </p>
        <p>
          <button type="submit" name="commit" class="huge ui positive icon button">
            <i class="save icon"></i>Add Comment
          </button>
        </p>
    <% end %>
  </div>

  <!-- Comment -->
  <% if @post.ad_comments.count != 0 %>
      <h3 class="page-header">Comments</h3>
      <% @post.ad_comments.each do |comment| %>
          <% if !comment.user_id.nil? %>
              <div class="media">
                <% if User.find(comment.user_id).profile_pic_file_name.nil? %>
                    <a class="pull-left" href="#">
                      <%= image_tag('/Profile_Avatar.png', :id => "Image_Tag_Thumbnail", :class => "media-object", :alt => "No Image") %>
                    </a>
                <% else %>
                    <a class="pull-left" href="#">
                      <%= image_tag(User.find(comment.user_id).profile_pic, :id => "Image_Tag_Thumbnail", :alt => "No Image") %>
                    </a>
                <% end %>
                <div class="media-body">
                  <h2 class="media-heading"><%= User.find(comment.user_id).username %>
                    <small><%= comment.created_at.to_datetime.strftime("%b %d, %Y at %r") %></small>
                    <% if !current_user.nil? && current_user.id == comment.user_id %>
                        <button class="big ui button pull-right" id="test" data-toggle="modal" data-comment-id="<%= comment.id %>" data-target="#myCommentDeleteModal">
                          <i class="remove icon"></i>Delete
                        </button>
                    <% end %>
                  </h2>
                  <%= comment.comment_body %>
                </div>
              </div>
          <% end %>
      <% end %>
  <% end %>


    <!-- Modal for requesting product --> 

  <div class="modal fade" id="Contact" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
          <div id="form-main">

  <div id="form-div">
    <form class="form" id="form1">
      <h1 style="color:white;"> Contact Seller </h1>
      <hr>

      <p class="name">
        <input name="name" type="text" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" placeholder="Your Name" id="product_name" />
      </p>
      
      <p class="email">
        <input name="email" type="text" class="validate[required,custom[email]] feedback-input" id="product_email" placeholder="Email" />
      </p>
      
      <p class="text">
        <textarea name="text" class="validate[required,length[6,300]] feedback-input" id="product_comment" placeholder="If you would like to add some comments.."></textarea>
      </p>
      
      
      <div class="submit">
        <input type="submit" value="SEND" id="button-blue"/>
        <div class="ease"></div>
      </div>
    </form>
  </div>
              
    </div>
  </div>
  

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Delete Article</h4>
          </div>
          <div class="modal-body">
            <p>Are you sure you want to delete the article?</p>
          </div>
          <div class="modal-footer">
            <a rel="nofollow" data-method="delete" href="<%= posts_path %>/<%= @post.id %>">
              <button class="big ui button"><i class="checkmark icon" ></i>Yes</button>
            </a>
            <button type="button" class="big ui button" data-dismiss="modal"><i class="remove icon"></i>No</button>
          </div>
        </div>
      </div>
    </div>
  <!-- Modal -->
  <div class="modal fade" id="myCommentDeleteModal" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Delete Comment</h4>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete this comment?</p>
        </div>
        <div class="modal-footer">
          <a rel="nofollow" data-method="delete" href="">
            <button class="big ui button"><i class="checkmark icon"></i>Yes</button>
          </a>
          <button type="button" class="big ui button" data-dismiss="modal"><i class="remove icon"></i>No</button>
        </div>
      </div>
    </div>
  </div>

  <script>

    function RedirectToPosts() {
      window.location = "<%= posts_url %>"
    }
    function RedirectToEdit() {
      window.location = "<%= edit_post_url %>"
    }

    $('#myCommentDeleteModal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget) // Button that triggered the modal
      var commentId = button.data('comment-id') // Extract info from data-* attributes
      // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
      // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
      var modal = $(this)
      modal.find('.modal-footer a').attr("href", "<%=post_ad_comments_path(@post.id)  %>/" + commentId);
    })

  </script>

  </div>
</div>